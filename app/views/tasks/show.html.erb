<%= link_to edit_task_path(@task.id), class: 'pull-right btn btn-primary mb-2' do %>
  <i class="bi bi-pencil-square"></i> Edit this task
<% end %>

<h1><%= @task.title %></h1>

<p class="well"><%= @task.details %></p>

<% if @task.completed %>
  <i class="bi bi-check2-square"></i> This task is completed
<% else %>
  <i class="bi bi-x-square"></i> This task is not completed yet
<% end %>

<hr>
<%= link_to tasks_path do %>
  <i class="bi bi-arrow-clockwise"></i> Back to list
<% end %>
